class Solution {
    public static int largest(int[] arr) {
        int n = arr.length;
        
        if(arr == null || arr.length == 0) {
            throw new IllegalArgumentException("Array is empty");
        }

        int largest = arr[0];
        for(int i=1;i<n;i++)
        {
            if(arr[i]>largest)
            {
                largest = arr[i];
            }
        }
        return largest;
    }
}
